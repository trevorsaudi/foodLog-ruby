<% content_for :title do%>
<%= @entry.meal_type %>  <%= DateTime.now.to_s(:nice_date) %>
<% end %>
<p>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">

      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>

  <div class="panel-block">
    <strong>Calories:</strong>
    <%= @entry.calories %>
  </div>

  <div class="panel-block">
    <strong>Proteins:</strong>
    <%= @entry.proteins %>
  </div>

  <div class="panel-block">
    <strong>Carbohydrates:</strong>
    <%= @entry.carbohydrates %>
  </div>

  <div class="panel-block">
    <strong>Fats:</strong>
    <%= @entry.fats %>
  </div>

</nav>

<div class="columns is-mobile">
<div class="column">
<%= link_to 'Edit', edit_entry_path(@entry), class:"button is-gray" %>
<%= link_to 'Delete', entry_path(@entry), method: :delete, data:{confirm: "Are you sure you want to delete? "}, class: "button is-gray" %>
</div>
<div class="column">
</div>
</div>
</div>
</div>